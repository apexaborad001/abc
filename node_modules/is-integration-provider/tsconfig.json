{
  "compilerOptions": {
      "module": "commonjs",
      "incremental": true,
      "tsBuildInfoFile": "./dist/.tsbuildinfo",
      "removeComments": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2020",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "typeRoots": ["@types","./node_modules/@types"],
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      }
  },
  "include": [
      "src/**/*"
  ]
}